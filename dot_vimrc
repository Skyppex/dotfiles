let mapleader = " "
nmap <space> <leader>

nnoremap <silent> U <C-r>

nnoremap <silent> <C-c> <Esc>
inoremap <silent> <C-c> <Esc>
vnoremap <silent> <C-c> <Esc>

nnoremap <silent> <C-s> :wa<cr>
inoremap <silent> <C-s> :wa<cr>
vnoremap <silent> <C-s> :wa<cr>

nnoremap <leader>. f.i<CR><Esc>l==
nnoremap <leader>, f.a<CR><Esc>l==
nnoremap <leader>| f.i<CR><Esc>l==

vnoremap K :m '<-2<CR>gv=gv
vnoremap J :m '>+1<CR>gv=gv

vnoremap <silent> < <gv
vnoremap <silent> > >gv

nnoremap <leader>y "+y
nnoremap <leader>p "+p
nnoremap <leader>d "+d

xnoremap <leader>y "+y
xnoremap <leader>p "+p
xnoremap <leader>d "+d

nnoremap gh ^
nnoremap gl $
xnoremap gh ^
xnoremap gl $
onoremap gh ^
onoremap gl $
