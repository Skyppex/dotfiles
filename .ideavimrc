source ~/.vimrc

set which-key
set notimeout

nnoremap <leader>so :source ~/.ideavimrc<cr>

nnoremap <leader>sf :action SearchEverywhere<cr>
nnoremap <leader>sg :action FindInPath<cr>
nnoremap gr :action FindUsages<cr>
nnoremap <leader>rn :action RenameElement<cr>
nnoremap gc :action CommentByLineComment<cr>
nnoremap H :action CodeCompletion<cr>
nnoremap <S-M-H> :action CodeCompletion<cr>
inoremap <S-M-H> :action CodeCompletion<cr>

nnoremap åd :action GotoPreviousError<cr>
nnoremap æd :action GotoNextError<cr>

nnoremap <leader>ca :action ShowIntentionActions<cr>

vnoremap J :m '<-2<CR>gv=gv
vnoremap K :m '>+1<CR>gv=gv

nnoremap <leader>hj :action AceWordStartAction<cr>
nnoremap <leader>hl :action AceLineAction<cr>
nnoremap <leader>hp :action AceTargetAction<cr>
